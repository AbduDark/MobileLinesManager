
<UserControl x:Class="MobileLinesManager.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="لوحة التحكم" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Statistics Cards -->
            <UniformGrid Columns="3" Rows="1" Margin="0,0,0,20">
                <!-- Total Lines Card -->
                <Border Background="#0078D4" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="إجمالي الخطوط" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding TotalLines}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </StackPanel>
                </Border>
                
                <!-- Assigned Lines Card -->
                <Border Background="#107C10" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="الخطوط المسلمة" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding AssignedLines}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </StackPanel>
                </Border>
                
                <!-- Available Lines Card -->
                <Border Background="#FFB900" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="الخطوط المتاحة" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding AvailableLines}" 
                                  FontSize="36" 
                                  FontWeight="Bold" 
                                  Foreground="White"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
            
            <!-- Operators Overview -->
            <TextBlock Text="نظرة عامة على المشغلين" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,10"/>
            
            <ItemsControl ItemsSource="{Binding Operators}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding ColorHex, Converter={StaticResource HexToBrushConverter}}" 
                               CornerRadius="8" 
                               Margin="5" 
                               Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" 
                                              FontSize="18" 
                                              FontWeight="SemiBold" 
                                              Foreground="White"/>
                                    <TextBlock Text="{Binding Categories.Count, StringFormat='عدد الفئات: {0}'}" 
                                              Foreground="White" 
                                              Opacity="0.9" 
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" 
                                          Text="{Binding Categories.Sum(c => c.Lines.Count), StringFormat='{0}'}" 
                                          FontSize="32" 
                                          FontWeight="Bold" 
                                          Foreground="White" 
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <Button Content="تحديث البيانات" 
                   Command="{Binding RefreshDashboardCommand}" 
                   Style="{StaticResource PrimaryButton}" 
                   Margin="0,20,0,0" 
                   HorizontalAlignment="Center" 
                   Padding="30,10"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="MobileLinesManager.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobileLinesManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="لوحة التحكم" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Statistics Cards -->
            <UniformGrid Rows="1" Columns="4" Margin="0,0,0,20">
                <Border Background="#0078D4" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="إجمالي الخطوط" Foreground="White" FontSize="16"/>
                        <TextBlock Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#107C10" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="الخطوط المتاحة" Foreground="White" FontSize="16"/>
                        <TextBlock Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#FFB900" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="الخطوط المسلمة" Foreground="White" FontSize="16"/>
                        <TextBlock Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="#E74856" CornerRadius="8" Margin="5" Padding="20">
                    <StackPanel>
                        <TextBlock Text="الخطوط المنتهية" Foreground="White" FontSize="16"/>
                        <TextBlock Text="0" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Recent Activity -->
            <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="النشاط الأخير" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <TextBlock Grid.Row="1" Text="لا يوجد نشاط حديث" 
                              FontSize="14" Foreground="Gray" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
