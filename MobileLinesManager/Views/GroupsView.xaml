<UserControl x:Class="MobileLinesManager.Views.GroupsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MobileLinesManager.Views"
             xmlns:vm="clr-namespace:MobileLinesManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             FlowDirection="RightToLeft">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="إدارة المجموعات" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <Button Grid.Column="1" 
                       Content="إضافة مجموعة جديدة" 
                       Command="{Binding AddGroupCommand}"
                       Style="{StaticResource PrimaryButton}"
                       Padding="15,8"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Groups List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <ComboBox ItemsSource="{Binding Operators}"
                                 DisplayMemberPath="Name"
                                 SelectedValuePath="Id"
                                 SelectedValue="{Binding FilterOperatorId}"
                                 Margin="0,0,0,5">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" 
                                                Fill="{Binding ColorHex}" 
                                                Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                Tag="بحث عن مجموعة..."
                                Margin="0,0,0,5"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" 
                              Text="المجموعات المتاحة:" 
                              FontWeight="Bold" 
                              Margin="0,0,0,5"/>

                    <!-- Groups List -->
                    <ListBox Grid.Row="2"
                            ItemsSource="{Binding Groups}"
                            SelectedItem="{Binding SelectedGroup}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" 
                                       BorderBrush="#E0E0E0" 
                                       BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                                            <Ellipse Width="12" Height="12" 
                                                    Fill="{Binding Operator.ColorHex}" 
                                                    Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" 
                                                  Margin="17,2,0,0">
                                            <Run Text="المشغل: "/>
                                            <Run Text="{Binding Operator.Name}" FontWeight="Bold"/>
                                        </TextBlock>

                                        <Grid Grid.Row="2" Margin="17,2,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0">
                                                <Run Text="الخطوط: "/>
                                                <Run Text="{Binding CurrentLinesCount}" FontWeight="Bold"/>
                                                <Run Text=" / "/>
                                                <Run Text="{Binding MaxLinesCount}"/>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1">
                                                <Run Text="النوع: "/>
                                                <Run Text="{Binding GroupType}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Group Details/Edit Form -->
            <Border Grid.Column="1" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,15">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}">
                                    <Binding Path="GroupName"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <!-- Group Form -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Group Name -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="اسم المجموعة:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" 
                                    Text="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding IsEditing}"
                                    Margin="0,0,0,10"/>

                            <!-- Operator -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="المشغل:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,10"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                     ItemsSource="{Binding Operators}"
                                     DisplayMemberPath="Name"
                                     SelectedValuePath="Id"
                                     SelectedValue="{Binding SelectedOperatorId}"
                                     IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="10" Height="10" 
                                                    Fill="{Binding ColorHex}" 
                                                    Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Name}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <!-- Group Type -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="نوع المجموعة:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,10"/>
                            <ComboBox Grid.Row="2" Grid.Column="1"
                                     ItemsSource="{Binding GroupTypes}"
                                     SelectedItem="{Binding SelectedGroupType}"
                                     IsEnabled="{Binding IsEditing}"
                                     Margin="0,0,0,10"/>

                            <!-- Max Lines -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                      Text="الحد الأقصى للخطوط:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,10"/>
                            <TextBox Grid.Row="3" Grid.Column="1"
                                    Text="{Binding MaxLines, UpdateSourceTrigger=PropertyChanged}"
                                    IsEnabled="{Binding IsEditing}"
                                    Margin="0,0,0,10"/>

                            <!-- Validity Date (for CashWallet groups) -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                      Text="تاريخ الصلاحية:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,10"
                                      Visibility="{Binding IsCashWalletGroup, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DatePicker Grid.Row="4" Grid.Column="1"
                                       SelectedDate="{Binding ValidityDate}"
                                       IsEnabled="{Binding IsEditing}"
                                       Margin="0,0,0,10"
                                       Visibility="{Binding IsCashWalletGroup, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Expected Delivery Date (for CashWallet groups) -->
                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                      Text="تاريخ التسليم المتوقع:" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,0,10"
                                      Visibility="{Binding IsCashWalletGroup, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <DatePicker Grid.Row="5" Grid.Column="1"
                                       SelectedDate="{Binding ExpectedDeliveryDate}"
                                       IsEnabled="{Binding IsEditing}"
                                       Margin="0,0,0,10"
                                       Visibility="{Binding IsCashWalletGroup, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <!-- Description -->
                            <TextBlock Grid.Row="6" Grid.Column="0" 
                                      Text="الوصف:" 
                                      VerticalAlignment="Top" 
                                      Margin="0,5,0,10"/>
                            <TextBox Grid.Row="6" Grid.Column="1"
                                    Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinHeight="80"
                                    IsEnabled="{Binding IsEditing}"
                                    Margin="0,0,0,10"/>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="7" Grid.Column="1" 
                                       Orientation="Horizontal" 
                                       HorizontalAlignment="Left"
                                       Margin="0,10,0,0">
                                <Button Content="حفظ" 
                                       Command="{Binding SaveGroupCommand}"
                                       Style="{StaticResource PrimaryButton}"
                                       Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Margin="0,0,10,0"
                                       Padding="20,8"/>
                                <Button Content="إلغاء" 
                                       Command="{Binding CancelEditCommand}"
                                       Style="{StaticResource SecondaryButton}"
                                       Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       Margin="0,0,10,0"
                                       Padding="20,8"/>
                                <Button Content="تعديل" 
                                       Command="{Binding EditGroupCommand}"
                                       Style="{StaticResource SecondaryButton}"
                                       Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                       Margin="0,0,10,0"
                                       Padding="20,8"/>
                                <Button Content="حذف" 
                                       Command="{Binding DeleteGroupCommand}"
                                       Style="{StaticResource DangerButton}"
                                       Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                       Padding="20,8"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F8F8F8" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <TextBlock>
                <Run Text="إجمالي المجموعات: "/>
                <Run Text="{Binding Groups.Count}" FontWeight="Bold"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
